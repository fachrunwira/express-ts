{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "Node16",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", ".env"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}